{% extends 'layouts/base.html.twig' %}

{% block title %} {{ 'title.resetpage.checkemail' | trans ({}, 'navigation') }} | TDO {% endblock %}

{% block body %}

{# Titre de la page email pour reset password envoy√© #}
<div class="text-center">
    <h1 class="text-uppercase border-bottom border-warning my-4">
        {{ 'email_check.titlepage' | trans ({}, 'pagecontent') }}
    </h1>
</div>

<div class="col-md-6 mx-auto py-2 my-4">
    {# Logo du site #}
    <div class="text-center py-4">
        <img src="{{ asset('build/images/default/octopus-logo-form.png') | imagine_filter("squared_thumb_smaller") }}"
             alt="Logo {{ project.name }}">
    </div>
    {# /Logo du site #}

    <div class="mt-3">
        <p>
            {{ 'email_check.expire' | trans ({}, 'pagecontent') }}
            {{ tokenLifetime|date('g') }} 
            {{ 'email_check.time' | trans ({}, 'pagecontent') }}
        </p>
        <p>
            {{ 'email_check.spam' | trans ({}, 'pagecontent') }} 
            <a href="{{ path('app_forgot_password_request') }}">
                {{ 'email_check.retry' | trans ({}, 'pagecontent') }}
            </a>
            .
        </p>
    </div>
</div>
    
{% endblock %}
