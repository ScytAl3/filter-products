{% extends 'layouts/base.html.twig' %}

{% block title %} {{ 'title.resetpage.checkemail' | trans ({}, 'navigation') }} | TDO {% endblock %}

{% block body %}

<!-- Titre de la page email pour reset password envoyÃ© -->
<div class="text-center">
    <h1 class="text-uppercase border-bottom border-warning my-4">Password reset: email sent</h1>
</div>

<div class="col-md-6 mx-auto py-2 my-4">
    <!-- Logo du site -->
    <div class="text-center py-4">
        <img src="{{ asset('build/images/default/octopus-logo-form.png') | imagine_filter("squared_thumb_smaller") }}"
             alt="Logo {{ project.name }}">
    </div>
    <!-- /Logo du site -->

    <div class="mt-3">
        <p>An email has been sent that contains a link that you can click to reset your password. This link will expire in
            {{ tokenLifetime|date('g') }} hour(s).</p>
        <p>If you don't receive an email please check your spam folder or <a
               href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
    </div>
</div>
    
{% endblock %}
