<a{% for attr, value  in options | merge({class: 'btn btn-secondary btn-sm ml-2'}) %} {{ attr }}="{{ value }}" {% endfor %}>
    <span class="float-right ml-1">
        {% if sorted %}
        {% if direction == 'desc' %}
        <i class="fa fa-sort-down"></i>
        {% else %}
        <i class="fa fa-sort-up"></i>
        {% endif %}
        {% else %}
        <i class="fa fa-sort"></i>
        {% endif %}
    </span>
    {{ title }}
    </a>