{% extends 'layouts/base.html.twig' %}

{% block title %} {{ 'title.checkoutpage.shipping' | trans ({}, 'navigation') }} | {{ parent() }}
{% endblock %}

{% block body %}

{# Titre de la page #}
<div class="text-center border-bottom border-warning pt-5">
    <h1 class="text-uppercase text-center">
        {{ 'cart.checkout.titlepage' | trans ({}, 'pagecontent') }}
    </h1>
    <p>
        {{ 'cart.checkout.create_subtitle' | trans ({}, 'pagecontent') }}
    </p>
</div>

{# Boutton retour page liste des adresses #}
<div class="text-center mt-3">
    <a class="btn btn-info btn-sm" href="{{ path('app_cart_index') }}">
        <i class="fas fa-chevron-circle-left"></i>
        {{ 'cart.checkout.buttons.back_to' | trans ({}, 'pagecontent') }}
    </a>
</div>

{# Formulaire pour les informations de la nouvelle adresse #}
<div class="col-md-8 rounded shadow mx-auto py-2 my-4">
    {# Logo du site #}
    <div class="text-center py-4">
        <img src="{{ asset('build/images/default/octopus-logo-form.png') | imagine_filter("squared_thumb_smaller") }}"
             alt="Logo {{ project.name }}">
    </div>
    {# /Logo du site #}

    {# Import du formulaire #}
    {% include 'account/form/_address.html.twig' %}
</div>

{% endblock %}