{% extends 'layouts/base.html.twig' %}

{% block title %} {{ 'title.accountpage.menu.identity' | trans ({}, 'navigation') }} | {{ parent() }} {% endblock %}

{% block body %}

{# Titre de la page #}
<div class="text-center border-bottom border-warning pt-5">
    <h1 class="text-uppercase text-center">
        {{ 'my_account.identity.titlepage' | trans ({}, 'pagecontent') }}
    </h1>
    <p>
        {{ 'my_account.identity.subtitle' | trans ({}, 'pagecontent') }}
    </p>
</div>

{# Boutton retour page principale mon account #}
<div class="text-center mt-3">
    <a class="btn btn-info btn-sm" href="{{ path('app_account_index', {'_fragment': 'anchor-account'}) }}">
        <i class="fas fa-chevron-circle-left mr-2"></i>
        {{ 'my_account.action_link.back_to' | trans ({}, 'pagecontent') }}
    </a>
</div>

{# Formulaire pour les informations d'identit√© de l'utilisateur #}
<div class="col-md-8 rounded shadow mx-auto py-2 my-4">
    {# Logo du site #}
    <div class="text-center py-4">
        <img src="{{ asset('build/images/default/octopus-logo-form.png') | imagine_filter("squared_thumb_smaller") }}"
             alt="Logo {{ project.name }}">
    </div>
    {# /Logo du site #}

    {# Import du formulaire #}
    {% include 'account/form/_identity.html.twig' %}
</div>

{% endblock %}